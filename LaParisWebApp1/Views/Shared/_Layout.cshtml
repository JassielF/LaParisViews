<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - LaParis Mobiliaria y Productos de Bellezas</title>

    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/main.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

</head>
<body>
<header>
        <div class="navbar navbar-expand-xl navbar-dark bg-dark" >
            <div class="brandRight">
                <a class="" href="@Url.Action("Index", "Home")">
                    <h1 id="imgTitulo"><span class="hidden displayNone">LaParis Guaymas: Página de Inicio </span></h1>
                </a>
            </div>
        </div>
</header>
    <nav class="navbar navbar-expand-lg navbar navbar-dark bg-dark">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link textBrown" href="@Url.Action("Productos","Productos")">Productos</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link textBrown" href="@Url.Action("Marcas","Catalogo")">Catálogo</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link textBrown" href="@Url.Action("Promociones","Promocion")">Descuentos</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link textBrown" href="@Url.Action("Servicio","Servicios")">Servicios</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link textBrown" href="@Url.Action("Establecimientos","Sucursal")">Sucursales</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link textBrown" href="@Url.Action("Biografia","Historia")">Información general</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link textBrown" href="@Url.Action("InicioSesion","LogIn")">Iniciar sesión</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link textBrown" href="@Url.Action("RegistroUsuario","Registro")">¿Aún no tienes cuenta?</a>
                </li>
            </ul>
        </div>
    </nav>

        <div class="body-content">
            @RenderBody()
            <hr />
        </div>

    <footer class="footer-bs">
        <div class="rowFooter">
            <div class="col-md-4 footer-nav animated fadeInUp">
                <h4 id="footerFont">Sucursales</h4>
                <div class="col-md-6">
                    <ul class="pages">
                        <li><a href="@Url.Action("Establecimientos","Sucursal")">Ley El Vigia</a></li>
                        <li><a href="@Url.Action("Establecimientos","Sucursal")">Guaymas Norte</a></li>
                        <li><a href="@Url.Action("Establecimientos","Sucursal")">Centro</a></li>
                    </ul>
                </div>
            </div>
            <div class="col-md-4 footer-social animated fadeInDown">
                <h4 id="footerFont">Contáctanos</h4>
                <ul>
                    <li><p>Número celular - (044) 622-111-1111</p></li>
                    <li><p>Correo eléctronico - Laparis@laparis.com</p></li>
                </ul>
            </div>
            <div class="col-md-4 footer-nav animated fadeInUp">
                <h4 id="footerFont">Síguenos</h4>
                <ul class="pages">
                    <li><a href="http://www.facebook.com" target="_blank">Facebook</a></li>
                    <li><a href="http://www.twitter.com" target="_blank">Twitter</a></li>
                    <li><a href="http://www.instagram.com" target="_blank">Instagram</a></li>
                </ul>
            </div>
        </div>
    </footer>
    
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js" integrity="sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js" integrity="sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ" crossorigin="anonymous"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
</body>
</html>