<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/main.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

</head>
<body>
<header>

        <div class="navbar navbar-expand-xl navbar-dark bg-dark" >
            <div class="brandRight">
                <a class="" href="@Url.Action("Index", "Home")">
                    <h1 id="imgTitulo"><span class="hidden displayNone">LaParis Guaymas: Pagina de Inicio </span></h1>
                </a>
            </div>
            <div class="searchRight">
                <form class="navbar-form navbar-right" role="search">
                    <div class="inline form-group">
                        <input type="text" class="form-control" placeholder="Buscar...">
                    </div>
                    <button type="submit" class="btn btn-outline-success">Buscar</button>
                </form>
            </div>
            <div class="userLeft inline">
                    <a href="@Url.Action("InicioSesion","LogIn")" class="btn btn-outline-success">Iniciar sesión</a> 
                    <a href="@Url.Action("RegistroUsuario","Registro")" class="btn btn-outline-success">¿Aún no tienes cuenta?</a>
            </div>
        </div>
</header>

    <nav class="navbar navbar-expand-lg navbar navbar-dark bg-dark">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link text-white" href="@Url.Action("Productos","Catalogo")">Catalogo</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="@Url.Action("Promociones","Promocion")">Promoción</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="@Url.Action("Servicio","Servicios")">Servicios</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="@Url.Action("Establecimientos","Sucursal")">Sucursales</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="@Url.Action("Biografia","Historia")">Información general</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white fa fa-shopping-cart" aria-hidden="true"></a>
                </li>
            </ul>
        </div>
    </nav>

        <div class="body-content">
            @RenderBody()
            <hr />
        </div>

    <footer class="footer-bs">
        <div class="row">
            <div class="col-md-4 footer-nav animated fadeInUp">
                <h4>Sucursales</h4>
                <div class="col-md-6">
                    <ul class="pages">
                        <li><p>Ley El Vigia</p></li>
                        <li><p>Guaymas Norte</p></li>
                        <li><p>Centro</p></li>
                    </ul>
                </div>
            </div>
            <div class="col-md-4 footer-social animated fadeInDown">
                <h4>Contactanos</h4>
                <ul>
                    <li><p>Número celular - (044) 622-111-1111</p></li>
                    <li><p>Correo eléctronico - Laparis@laparis.com</p></li>
                </ul>
            </div>
            <div class="col-md-4 footer-ns animated fadeInRight">
                <h4>Siguenos</h4>
                <ul>
                    <li><a href="#">Facebook</a></li>
                    <li><a href="#">Twitter</a></li>
                    <li><a href="#">Instagram</a></li>
                    <li><a href="#">RSS</a></li>
                </ul>
            </div>
        </div>
    </footer>
    
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js" integrity="sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js" integrity="sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ" crossorigin="anonymous"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
</body>
</html>